<Window x:Class="ComicViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="800" Width="1200"
        Title="Comic Viewer"
        Icon="Resources/kris.ico"
        Background="#FAFAFA">

    <Window.Resources>

        <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:Converter="clr-namespace:ComicViewer.Converters">

            <ResourceDictionary.MergedDictionaries>
                <!-- 加载分离的资源文件 -->
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
                <ResourceDictionary Source="Styles/Cards.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 转换器实例 -->
            <Converter:ToolTipConverter x:Key="ToolTipConverter"/>

            <!-- 圆角文本框样式 -->
            <Style x:Key="RoundTextBoxStyle" TargetType="TextBox">
                <Setter Property="Height" Value="28"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="0"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- 顶部紧凑工具栏 -->
        <Border Height="45" Background="White" 
                VerticalAlignment="Top"
                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：设置按钮 -->
                <!-- 左侧：设置按钮（修改后） -->
                <Grid Grid.Column="0">
                    <!-- 设置按钮 -->
                    <ToggleButton x:Name="SettingsToggleButton"
                                  Style="{StaticResource IconToggleButtonStyle}"
                                  Width="40" Height="40"
                                  Margin="5">
                        <TextBlock Text="⚙️" FontSize="16"/>
                    </ToggleButton>

                    <!-- 设置菜单 -->
                    <Popup x:Name="SettingsPopup"
                           Placement="Bottom"
                           PlacementTarget="{Binding ElementName=SettingsToggleButton}"
                           IsOpen="{Binding ElementName=SettingsToggleButton, Path=IsChecked}"
                           StaysOpen="False"
                           AllowsTransparency="True"
                           PopupAnimation="Fade"
                           Width="280">
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="4"
                                Effect="{StaticResource DropShadowEffect}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 菜单标题 -->
                                <Border Grid.Row="0" 
                                        Background="#F8F9FA"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="0,0,0,1"
                                        Padding="16,12">
                                    <TextBlock Text="⚙️ 设置" 
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#333333"/>
                                </Border>

                                <!-- 当前保存目录显示 -->
                                <Border Grid.Row="1"
                                        Padding="16,12"
                                        BorderBrush="#F0F0F0"
                                        BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 标题 -->
                                        <TextBlock Grid.Row="0"
                                                   Text="📁 保存目录"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,6"
                                                   Foreground="#555555"/>

                                        <!-- 目录路径 -->
                                        <Border Grid.Row="1"
                                                Background="#F8F9FA"
                                                BorderBrush="#E0E0E0"
                                                BorderThickness="1"
                                                CornerRadius="3"
                                                Padding="10,8"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 目录路径文本 -->
                                                <TextBlock x:Name="SaveDirectoryText"
                                                           Grid.Column="0"
                                                           Text="{Binding CurrentSaveDirectory.Value}"
                                                           FontSize="12"
                                                           TextWrapping="Wrap"
                                                           Foreground="#666666"/>

                                                <!-- 复制按钮 -->
                                                <Button Grid.Column="1"
                                                        Content="📋"
                                                        Width="24" Height="24"
                                                        Padding="0"
                                                        Click="CopyDirectoryPath_Click"
                                                        ToolTip="复制路径">
                                                    <Button.Style>
                                                        <Style BasedOn="{StaticResource IconButtonStyle}" TargetType="Button">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="border"
                                                                                Background="{TemplateBinding Background}"
                                                                                CornerRadius="3">
                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                              VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>

                                        <!-- 存储信息 -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 存储使用情况 -->
                                            <TextBlock x:Name="StorageUsageText"
                                                       Grid.Column="0"
                                                       Text="正在计算存储空间..."
                                                       FontSize="11"
                                                       Foreground="#888888"/>

                                            <!-- 刷新按钮 -->
                                            <Button Grid.Column="1"
                                                    Content="🔄"
                                                    Width="20" Height="20"
                                                    Padding="0"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    Click="RefreshStorageInfo_Click"
                                                    ToolTip="刷新存储信息"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- 更改保存目录 -->
                                <Border Grid.Row="2"
                                        Padding="16,12"
                                        BorderBrush="#F0F0F0"
                                        BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 标题 -->
                                        <TextBlock Grid.Row="0"
                                                   Text="更改保存目录"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Margin="0,0,0,8"
                                                   Foreground="#555555"/>

                                        <!-- 更改目录按钮 -->
                                        <Button Grid.Row="1"
                                                x:Name="ChangeDirectoryButton"
                                                Content="📂 选择新目录..."
                                                Height="32"
                                                Click="ChangeSaveDirectory_Click">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource AccentButtonStyle}" TargetType="Button">
                                                    <Setter Property="Background" Value="#4285F4"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="border"
                                                                        Background="{TemplateBinding Background}"
                                                                        CornerRadius="4"
                                                                        Padding="12,0">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#3367D6"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsPressed" Value="True">
                                                                        <Setter TargetName="border" Property="Background" Value="#2A56C6"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>

                                <!-- 分隔线 -->
                                <Border Grid.Row="3" 
                                        Height="1" 
                                        Background="#F0F0F0"/>

                                <!-- 底部操作 -->
                                <StackPanel Grid.Row="4"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="16,12">
                                    <Button x:Name="OpenDirectoryButton"
                                            Content="📁 打开目录"
                                            Height="28"
                                            Padding="12,0"
                                            Style="{StaticResource TextButtonStyle}"
                                            Click="OpenSaveDirectory_Click"
                                            ToolTip="在文件资源管理器中打开"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Popup>
                </Grid>

                <!-- 中间：搜索和排序 -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- 搜索框 -->
                    <Border Width="280" Height="32"
                            Background="#F5F5F5"
                            CornerRadius="16">
                        <Grid>
                            <TextBox x:Name="MainSearchBox"
                                     TextChanged="OnNameSearchChanged">
                                <TextBox.Resources>
                                    <!-- 水印效果 -->
                                    <VisualBrush x:Key="PlaceholderBrush" 
                                                 AlignmentX="Left" 
                                                 AlignmentY="Center" 
                                                 Stretch="None">
                                        <VisualBrush.Visual>
                                            <TextBlock Text="🔍 搜索漫画..." 
                                                       Foreground="#888"
                                                       FontSize="12"
                                                       Margin="8,0"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource RoundTextBoxStyle}" TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- 紧凑排序下拉 -->
                    <ComboBox x:Name="SortCombo"
                              Width="110" Height="32"
                              Margin="10,0"
                              FontSize="13"
                              SelectedIndex="0"
                              Background="Transparent"
                              SelectionChanged="SortCombo_SelectionChanged">
                        <ComboBoxItem>最新添加</ComboBoxItem>
                        <ComboBoxItem>最近阅读</ComboBoxItem>
                        <ComboBoxItem>标题 A-Z</ComboBoxItem>
                        <ComboBoxItem>标题 Z-A</ComboBoxItem>
                        <ComboBoxItem>评分最高</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <!-- 右侧：添加按钮 -->
                <Button Grid.Column="2"
                        Width="90" Height="32"
                        Margin="0,0,10,0"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="AddComics_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="＋" Margin="0,0,4,0"/>
                        <TextBlock Text="添加漫画"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 主内容区 -->
        <Grid Margin="0,45,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>
                <!-- 紧凑标签栏 -->
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0" 
              x:Name="ComicScrollViewer"
              VerticalScrollBarVisibility="Auto"
              PreviewMouseWheel="OnPreviewMouseWheel">

                <!-- 使用ItemsControl并绑定到Comics集合 -->
                <ItemsControl x:Name="ComicItemsControl"
                  ItemsSource="{Binding Comics}"
                  HorizontalAlignment="Left"
                  Margin="10,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <!-- WrapPanel实现网格布局 -->
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- 漫画卡片模板 -->
                            <Border Style="{StaticResource CompactComicCard}"
                                    ToolTip="{Binding Converter={StaticResource ToolTipConverter}}"
                                    MouseLeftButtonUp="ComicCard_Click">
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="📖 打开漫画"
                                                  Click="OpenComicMenuItem_Click">
                                            <MenuItem.Icon>
                                                <TextBlock Text="▶" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="🏷️ 编辑标签"
                                                  Click="EditTagsMenuItem_Click">
                                            <MenuItem.Icon>
                                                <TextBlock Text="🏷" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>

                                        <MenuItem Header="🔗 源相关">
                                            <MenuItem.Icon>
                                                <TextBlock Text="🔗" FontSize="14"/>
                                            </MenuItem.Icon>

                                            <MenuItem Header="编辑源"
                                                      Click="EditSourceMenuItem_Click"/>

                                            <MenuItem Header="复制源"
                                                      Click="CopySourceMenuItem_Click"/>
                                        </MenuItem>

                                        <MenuItem Header="✍️ 编辑作者"
                                                  Click="EditAuthorMenuItem_Click">
                                            <MenuItem.Icon>
                                                <TextBlock Text="✍️" FontSize="14"/>
                                            </MenuItem.Icon>
                                        </MenuItem>


                                        <Separator/>

                                        <MenuItem Header="📤 分享漫画"
                                                  Click="ShareComicMenuItem_Click"/>

                                        <MenuItem Header="🗑️ 从库中移除"
                                                  Click="RemoveComicMenuItem_Click"
                                                  Foreground="Red"/>

                                        <MenuItem Header="⚠️ 删除文件"
                                                  Click="DeleteComicMenuItem_Click"
                                                  Foreground="DarkRed"/>
                                    </ContextMenu>
                                </Border.ContextMenu>

                                <!-- 卡片内容 -->
                                <Grid>
                                    <!-- 封面绑定 -->

                                    <Viewbox MaxWidth="280" MaxHeight="350" Stretch="Uniform">
                                        <Image Stretch="None"
                                               Source="{Binding CoverImage}"/>
                                    </Viewbox>

                                    <!-- 标题和标签区域 -->
                                    <Border Background="#80000000" 
                                VerticalAlignment="Bottom"
                                Height="55">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" 
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Margin="5,5,5,0"
                                           TextWrapping="Wrap"
                                           MaxHeight="36"
                                           TextTrimming="CharacterEllipsis"
                                           Foreground="White"/>

                                            <TextBlock Text="{Binding TagsPreview}" 
                                           FontSize="10"
                                           Foreground="#CCCCCC"
                                           Margin="5,0,5,5"
                                           TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- 标签侧栏 -->
            <Border Grid.Column="1" 
                    x:Name="TagPanel"
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 标签栏标题 -->
                    <Border Grid.Row="0" 
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="🏷️ 标签" 
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <!-- 标签搜索 -->
                    <Border Grid.Row="1" Padding="10,8">
                        <TextBox x:Name="TagSearchBox"
                                 TextChanged="OnTagSearchChanged">
                            <TextBox.Resources>
                                <!-- 水印效果 -->
                                <VisualBrush x:Key="PlaceholderBrush" 
                                             AlignmentX="Left" 
                                             AlignmentY="Center" 
                                             Stretch="None">
                                    <VisualBrush.Visual>
                                        <TextBlock Text="🔍 搜索标签..." 
                                                   Foreground="#888"
                                                   FontSize="12"
                                                   Margin="8,0"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </TextBox.Resources>
                            <TextBox.Style>
                                <Style BasedOn="{StaticResource RoundTextBoxStyle}" TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="{x:Null}">
                                            <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- 标签列表 -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="10,0,10,10">
                        <VirtualizingStackPanel>
                            <ItemsControl x:Name="TagListControlChecked"
                                          ItemsSource="{Binding SelectedTags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Margin="0,1"
                                                  IsChecked="True"
                                                  Unchecked="TagCheckBox_Unchecked">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="12"
                                                           Margin="4,0,4,0"/>
                                                <TextBlock Text="{Binding Count}" 
                                                           Foreground="#888"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <ItemsControl x:Name="TagListControlUnchecked"
                                          ItemsSource="{Binding UnselectedTags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Margin="0,1"
                                                  IsChecked="False"
                                                  Checked="TagCheckBox_Checked">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="12"
                                                           Margin="4,0,4,0"/>
                                                <TextBlock Text="{Binding Count}" 
                                                           Foreground="#888"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </VirtualizingStackPanel>
                    </ScrollViewer>

                    <!-- 标签操作 -->
                    <Border Grid.Row="3" 
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,1,0,0"
                            Padding="10,8">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button x:Name="ClearFilterButton"
                                    Content="清除筛选"
                                    Height="28"
                                    Padding="12,0"
                                    FontSize="12"
                                    Style="{StaticResource TextButtonStyle}"
                                    Click="ClearFilters_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Height="25" 
                VerticalAlignment="Bottom"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock x:Name="StatusText"
                           VerticalAlignment="Center"
                           Margin="10,0"
                           FontSize="11"
                           Foreground="#666">
                    <Run Text="就绪"/>
                </TextBlock>

                <TextBlock x:Name="CountText"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="10,0"
                           FontSize="11"
                           Foreground="#666">
                    <Run Text="加载中..."/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>